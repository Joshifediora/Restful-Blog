<% include ./partials/header %>

<h1>Edit page!!</h1>

<div class="ui main text container segment">
    <div class="huge header">Edit <%= blog.title %></div>
    <form class="ui form" method="post" action="/blogs/<%= blog._id %>?_method=PUT">
        <div class="field">
            <label>Title</label>
             <input type="text" name="blog[title]" value=" <%= blog.title %>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" value=" <%= blog.image %>">
        </div>
        <div class="field">
            <label>Body Text</label>
             <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>









<% include ./partials/footer %>